{
  "extends": "../shared-styles/tsconfig.json",
  "compilerOptions": {
    // Optional: Add specific overrides for this microfrontend if needed
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"],  // General alias for the 'src' folder
      "ui": ["../shared-styles/src/components/ui"],  // Adjust to match the correct path for 'ui'
      "components": ["../shared-styles/src/components"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/components/ui/*.tsx"
  ]
}